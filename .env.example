# Application Settings
APP_NAME=akshare_web
APP_ENV=development
APP_DEBUG=true
APP_VERSION=0.1.0

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Settings (Shared with cloud_quant)
# Main database for users, tasks, scripts, executions
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=cloud_quant

# Data warehouse DB for akshare scripts output
DATA_MYSQL_HOST=127.0.0.1
DATA_MYSQL_PORT=3306
DATA_MYSQL_USER=root
DATA_MYSQL_PASSWORD=password
DATA_MYSQL_DATABASE=akshare_data

# Database Connection Pool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Settings (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Authentication Settings
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# Email Settings (for verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@akshare_web.com
EMAILS_FROM_NAME=akshare_web

# Task Scheduler Settings
ENABLE_SCHEDULER=true
SCHEDULER_BOOTSTRAP_ON_STARTUP=true
SCHEDULER_MAX_WORKERS=3
TASK_RETRY_MAX_ATTEMPTS=3
TASK_RETRY_BASE_DELAY=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# CORS Settings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000", "http://localhost:6600"]
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Data Storage
DATA_DIR=./data
UPLOAD_DIR=./uploads

# akshare Settings
AKSHARE_TIMEOUT=120
AKSHARE_CALL_TIMEOUT=120
AKSHARE_RETRY_ATTEMPTS=3
